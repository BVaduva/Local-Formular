{% if type == 'nav-tabs' %}
	<ul class="nav {{ type }}">
		{% for item in items %}
			<li class="nav-item">
				{% if item.dropdown_items is defined %}
					{% include 'dropdown_button.twig' with {
                        'dropdown_label': item.text,
                        'dropdown_items': item.dropdown_items,
                        'button_type': item.button_type|default('primary')
                    } %}
				{% else %}
					<a class="nav-link {% if item.active %}active{% endif %}" href="{{ item.link }}">
						{{ item.text }}
					</a>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
{% else %}
	<nav class="nav {{ type }}">
		{% for item in items %}
			{% if item.dropdown_items is defined %}
				{% include 'dropdown_button.twig' with {
                    'dropdown_label': item.text,
                    'dropdown_items': item.dropdown_items,
                    'button_type': item.button_type|default('primary')
                } %}
			{% else %}
				<a class="nav-link {% if item.active %}active{% endif %}" href="{{ item.link }}">
					{{ item.text }}
				</a>
			{% endif %}
		{% endfor %}
	</nav>
{% endif %}

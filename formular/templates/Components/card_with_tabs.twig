<div class="card">
	<div class="card-header">
		<ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
			{% for tab in tabs %}
				<li class="nav-item">
					<a class="nav-link {% if loop.first %}active{% endif %}" id="{{ tab.title|lower }}-tab" data-bs-toggle="tab" href="#{{ tab.title|lower }}" role="tab" aria-controls="{{ tab.title|lower }}" aria-selected="{% if loop.first %}true{% else %}false{% endif %}">{{ tab.title }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
	<div class="card-body">
		<div class="tab-content" id="myTabContent">
			{% for tab in tabs %}
				<div class="tab-pane fade {% if loop.first %}show active{% endif %}" id="{{ tab.title|lower }}" role="tabpanel" aria-labelledby="{{ tab.title|lower }}-tab">
					<p>{{ tab.content|raw }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</div>

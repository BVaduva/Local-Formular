{# 
  Clearfix Component
  - Pass content to be cleared inside this block.
  - You can optionally pass a "use_clearfix" boolean to decide if clearfix should be applied.
#}

<div class="{{ use_clearfix ? 'clearfix' : '' }}">
	{% if include_template is defined %}
		{% include include_template with template_data %}
	{% endif %}
</div>


<!-- EXAMPLE CODE -->
{% if clearfix_off %}
	<div
		class="container mt-3">
		<!-- Section without clearfix -->
		<h2>Without Clearfix</h2>
		<div class="bg-light border p-3 mt-3" style="background-color: #f8f9fa;">
			<button type="button" class="btn btn-secondary float-start">Button floated left</button>
			<button type="button" class="btn btn-secondary float-end">Button floated right</button>
			<!-- No clearfix here, so the container may collapse -->
		</div>

	</div>
{% endif %}

{% if clearfix_on %}
	<div
		class="container mt-3">
		<!-- Section with clearfix -->
		<h2>With Clearfix</h2>
		<div class="bg-light border p-3 mt-3 clearfix" style="background-color: #f8f9fa;">
			<button type="button" class="btn btn-secondary float-start">Button floated left</button>
			<button type="button" class="btn btn-secondary float-end">Button floated right</button>
			<!-- clearfix ensures the container expands -->
		</div>
		<p class="mt-3">
			The container above uses
			<code>clearfix</code>
			to expand properly, even when using floated buttons.
		</p>
	</div>
{% endif %}

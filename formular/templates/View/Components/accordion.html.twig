{% extends 'base.twig' %}
{% block title %}
	Accordion Example
{% endblock %}

{% block content %}
	{% include 'accordion.twig' %}

	<div class="row mt-4">
		<div class="col-md-8">
			{% include 'codeblock.twig' with { 
            'language': 'twig', 
            'code': '{# Basic accordion.twig #}
    <div class="accordion" id="accordionExample">
        {% for item in items %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading{{ loop.index }}">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="true" aria-controls="collapse{{ loop.index }}">
                        {{ item.title }}
                    </button>
                </h2>
                <div id="collapse{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="heading{{ loop.index }}" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {{ item.content|raw }}
                    </div>
                </div>
            </div>
        {% else %}
            <p>No items available in the accordion.</p>
        {% endfor %}
    </div>'
        } %}
		</div>
	</div>
{% endblock %}
